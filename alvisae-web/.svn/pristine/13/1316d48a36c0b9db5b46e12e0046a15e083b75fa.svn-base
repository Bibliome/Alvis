<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:Annotation="urn:import:fr.inra.mig_bibliome.alvisae.client.Annotation">

    <ui:with field='staneRes' type='fr.inra.mig_bibliome.alvisae.client.StanEditorResources'/>

    <ui:style type='fr.inra.mig_bibliome.alvisae.client.Annotation.TargetListUi.Styles'>
.DetailGrid td {
    outline: silver solid 1px ;
    font-size: smaller;
    border-collapse: collapse;
}

.DetailGridHeader {
    background-color: gainsboro;
    font-size: smaller;
}

table.DetailGridFirstRow >tbody>tr:first-child {
    background-color: lightgray;
    font-size: smaller;
}
    </ui:style>
    
    <g:DockLayoutPanel unit='EM' >
        <g:north size='1'>
            <g:Label ui:field='tableLabel' styleName='{style.DetailGridHeader}'>Selected Targets</g:Label>
        </g:north>
        <g:center size='5'>
            <g:ScrollPanel >
                <g:Grid ui:field='targetGrid' width='100%' height='100%' styleName='{style.DetailGrid} {style.DetailGridFirstRow}'></g:Grid>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
