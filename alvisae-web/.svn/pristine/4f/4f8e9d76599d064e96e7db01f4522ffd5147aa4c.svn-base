<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
>
    <ui:with field='staneRes' type='fr.inra.mig_bibliome.alvisae.client.StaneCoreResources'/>
    <ui:style type='fr.inra.mig_bibliome.alvisae.client.data.Retrieve.NetworkActivityDisplayer.Styles'>
    </ui:style>


    <g:HTMLPanel>
        <table cellspacing="0" cellpadding="0" style="height: 100%; width: 100%;">
            <tbody>
                <tr style="vertical-align: top;">
                    <td align="center" style="vertical-align: middle;">
                        <div style="width: 100%; height: 1.4em;">
                            <g:Label ui:field='networkStatusLbl'/>
                        </div>
                    </td>
                    <td align="center" style="vertical-align: middle;">
                        <div style="width: 100%; height: 1.4em;">
                            <g:Image visible='false' ui:field='networkStatusImg' resource='{staneRes.NetworkStatusOffIcon}'/>
                        </div>
                    </td>
                    <td align="center" style="vertical-align: middle;">
                        <div style="width: 100%; height: 1.4em;">
                            <g:Image ui:field='networkActivityImg' />
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>
