<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:VerticalPanel>
        <g:VerticalPanel>
            <g:Label>New password:</g:Label>
            <g:PasswordTextBox ui:field='password_1' />
            <g:Label>Password verification:</g:Label>
            <g:PasswordTextBox ui:field='password_2' />
        </g:VerticalPanel>
        <g:VerticalPanel horizontalAlignment="ALIGN_CENTER">
            <g:Button text='change' ui:field='changeButton' title='click to change password'/>
        </g:VerticalPanel>
    </g:VerticalPanel>
</ui:UiBinder>
