.cellTreeWidget {

}

.cellTreeEmptyMessage {
    padding-left: 16px;
    font-style: italic;
}

.cellTreeItem {
    padding-top: 0px;
    padding-bottom: 1px;
    font-size: small;
    cursor: hand;
    cursor: pointer;
    zoom: 1;
}

.cellTreeItemImage {

}

.cellTreeItemImageValue {
    zoom: 1;
}

.cellTreeItemValue {
    padding-left: 3px;
    padding-right: 3px;
    outline: none;
}

/*
div:focus { outline: none; }
*/
.cellTreeKeyboardSelectedItem {
    /*  background-color: #ffff00; */
}

.cellTreeOpenItem {

}

.cellTreeTopItem {
  margin-top: 0px !important;
}

.cellTreeTopItemImage {

}

.cellTreeTopItemImageValue {
  border-bottom: none !important;
}

@sprite .cellTreeSelectedItem {
    gwt-image: 'cellTreeSelectedBackground';
    background-color: #628cd5;
    color: white;
    height: auto;
    overflow: hidden;
}

.cellTreeShowMoreButton {
    padding-left: 16px;
    outline: none;
}
