<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
>

    <ui:with field='staneCoreRes' type='fr.inra.mig_bibliome.alvisae.client.StaneCoreResources'/>
    <ui:with field='staneRes' type='fr.inra.mig_bibliome.alvisae.client.StaneResources'/>
    
    <ui:style>
        .ToolBar {
        background-color:  lightsteelblue;
        }
        
    </ui:style>
    
    <g:LayoutPanel styleName='{style.ToolBar}' ui:field='mainToolBar' width='100%' height='100%'>
        <g:layer top='0.1EM' height='1.9EM' left='0.5EM' right='16EM'>
            <g:SimplePanel ui:field='embeddedWidgetHolder'></g:SimplePanel>        
        </g:layer>
        <g:layer top='0.1EM' height='1.9EM' right='0.5EM' width='15.8EM'>
            <g:MenuBar ui:field='mainMenu'>
                <g:MenuItem ui:field="userActionMenuItem"/>
                <g:MenuItem ui:field="helpMenuItem"></g:MenuItem>
                <g:MenuItem ui:field="aboutMenuItem"></g:MenuItem>
            </g:MenuBar>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>