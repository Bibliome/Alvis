<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
>

    <ui:with field='staneRes' type='fr.inra.mig_bibliome.alvisae.client.StaneCoreResources'/>
    <ui:style type='fr.inra.mig_bibliome.alvisae.client.data.ResultMessageDialog.Styles'>
.SmallButton {
    height: 16px;
    width: 16px;
}
    </ui:style>

    <g:HTMLPanel height="10em" width="25em">
        <table cellspacing="0" cellpadding="0" style="height: 100%; width: 100%;">
            <tbody>
                <tr>
                    <td valign='middle' align='center' style="width: 4em;">
                        <g:Image ui:field='icon' resource='{staneRes.OkMessageIcon}'/>
                    </td>
                    <td valign='middle' align='left'>
                        <g:ScrollPanel width='100%' height='100%' >
                            <g:Label ui:field='panel' width='100%' />
                        </g:ScrollPanel>
                    </td>
                </tr>
                <tr>
                    <td>
                    </td>
                    <td valign='bottom' align='right'>
                        <g:PushButton ui:field='OkBtn' addStyleNames='{style.SmallButton}'>
                            <g:upFace image='{staneRes.ApplyIcon}' />
                        </g:PushButton>
                    </td>
                </tr>

            </tbody>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>
